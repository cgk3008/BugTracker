<body>

    <!-- Sidebar starts -->
    <div class="sidebar">

        <div class="sidey">

            <!-- Logo -->
            @*<div class="logo">
                    <h1><a href="~/Assets/bug-temp/theme/index.html"><i class="fa fa-desktop br-red"></i> Barnie <span>It's Legendary</span></a></h1>
                </div>*@

            <!-- Sidebar navigation starts -->
            <!-- Responsive dropdown -->
            <div class="sidebar-dropdown"><a href="#" class="br-red"><i class="fa fa-bars"></i></a></div>

            <div class="side-nav">

                <div class="side-nav-block">
