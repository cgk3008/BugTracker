                        <a href="https://cliffsportfolio.azurewebsites.net/"><font color="white"><img src="~/Assets/Webp.net-resizeimage.png" /> Portfolio</font></a>
                    </h2>
                    <br />

                    <h4>Main</h4>
                    <!-- Sidebar links -->
                    <ul class="list-unstyled">
                        <li>
                            <a>
                                <i class="fa fa-desktop">
                                </i>   @Html.ActionLink("Dashboard", "Index", "Home")
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="side-nav-block">
                    <h4>Menu</h4>
                    <ul class="list-unstyled">
                        <li>

                            <a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <i class="fa fa-desktop">
                                    </i>
                                    @Html.ActionLink("Admin User View", "Index", "Admin")
                                }
                            </a>

                        </li>
                        <li>

                            <a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                {
                                    <i class="fa fa-desktop">
                                    </i>
                                    @Html.ActionLink("All Projects", "Index", "Projects")
                                }

                            </a>

                        </li>
                        <li>
                            <a>
                                <i class="fa fa-desktop">
                                </i>   @*@Html.ActionLink("Assigned Projects", "Index", "AssignedProjects")
