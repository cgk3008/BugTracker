@model IEnumerable<BugTracker.Models.Project>
@{
	ViewBag.Title = "Index";
}

<h2>Admin Project Index</h2>

<br/>
<h3>@Html.ActionLink("Create Project", "Create", "Projects")</h3>

<br />
@foreach (var chg in Model)
{
	<p>@chg.Name | @Html.ActionLink("Add User to Project", "AddToProject", new { id = chg.Id })| @Html.ActionLink("Remove User from Project", "RemoveUser", new { id = chg.Id })</p>
	<ul>
		@foreach (var user in chg.Users)
		{

			<li>
				@user.FullName
			</li>
		}
	</ul>

}