@model IEnumerable<BugTracker.Models.TicketComment>

@{
	ViewBag.Title = "Index";
}
<div class="main-content">
	<div class="container">

		<div class="page-content">

			<!-- Heading -->
			<div class="single-head">
				<!-- Heading -->
				<h2 class="pull-left"><i class="fa fa-ticket green"></i> Ticket Comments Index</h2>
				<!-- Bread crumbs -->
				<div class="breads pull-right">
					@*<strong>Nav</strong> : <a href="#">Home</a> / <a href="#">Sign</a> / Home*@
				</div>
				<div class="clearfix"></div>
			</div>


			<h3>
				@Html.ActionLink("Create New Comment", "Create")
			</h3>
			<table class="table">
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Ticket.Body)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.User.FullName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Body)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Created)
					</th>
					<th>
					<th>
						@Html.DisplayNameFor(model => model.FileUrl)
					</th>
					<th>

					</th>
				</tr>

				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Ticket.Body)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.User.FullName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Body)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Created)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FileUrl)
						</td>
						<td>
							@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
							@Html.ActionLink("Details", "Details", new { id = item.Id }) |
							@Html.ActionLink("Delete", "Delete", new { id = item.Id })
						</td>
					</tr>
				}

			</table>

		</div>
	</div>
</div>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
